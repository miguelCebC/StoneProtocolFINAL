<Window x:Class="StoneProtocol.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoneProtocol"
        mc:Ignorable="d"
        Title="ProductWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding NombreProducto}" FontSize="24" FontWeight="Bold" Margin="0,10,0,20" />
        <Image Grid.Row="1" Source="{Binding ImageSource}" Stretch="Uniform" Margin="0,10,0,20" />
        <Button Grid.Row="2" Content="Comprar" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="OnBuyButtonClick" />
    </Grid>
</Window>
